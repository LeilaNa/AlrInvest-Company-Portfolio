@model AlrInvestSupply.Models.Entity.Contact
@using AlrInvestSupply.AppCode.Globalization

@{
    ViewBag.Title = RLang.Contact;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section>
    <div class="container">
        <div class="info">
            <div class="row">
                <div class="col-lg-6 col-md-6-col-sm-12 col-xs-12">
                    <ul>
                        <li> <h3>ALR InVest</h3></li>
                        <li>
                            <i class="fas fa-map-pin"></i>
                            <p>@Model.Adress</p>
                        </li>
                        <li>
                            <i class="fas fa-phone"></i>
                            <p>@Model.Phone</p>
                        </li>
                        <li>
                            <i class="far fa-envelope"></i>
                            <p>@Model.Email</p>
                        </li>

                    </ul>
                </div>
                <div class="col-lg-6 col-md-6-col-sm-12 col-xs-12">
                    <div class="mapouter">
                        <div class="gmap_canvas">
                            <iframe width="600" height="500" id="gmap_canvas"
                                    src="https://maps.google.com/maps?q=gulbala%20eliyev%209&t=&z=13&ie=UTF8&iwloc=&output=embed"
                                    frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net">embedgooglemap.net</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section style{
    <link rel="stylesheet" href="~/Public/css/contact.css">

}