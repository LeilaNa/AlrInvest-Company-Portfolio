@model AlrInvestSupply.Models.Entity.Contact
@using AlrInvestSupply.AppCode.Globalization

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 menu">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">@RLang.Home</a></li>
                        <li><a href="@Url.Action("Index","About")">@RLang.About</a></li>
                        <li><a href="@Url.Action("Index","Service")">@RLang.Services</a></li>
                        <li><a href="@Url.Action("Index","Client")">@RLang.Clients</a></li>
                        <li><a href="@Url.Action("Index","Contact")">@RLang.Contact</a></li>
