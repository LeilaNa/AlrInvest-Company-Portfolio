@model IEnumerable<AlrInvestSupply.Models.Entity.Contact>

@{
    ViewBag.Title = "Əlaqə məlumatları";
    Layout = "~/Areas/Control/Views/Shared/_LayoutControl.cshtml";
}

<h2>Əlaqə məlumatları</h2>

<table class="table">
    <tr>
        <th>
            Telefon 
        </th>
        <th>
           Ünvan
        </th>
        <th>
          Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success btn-sm"><i class="fa fa-edit text-light"></i></a>
        </td>
    </tr>
}

</table>
