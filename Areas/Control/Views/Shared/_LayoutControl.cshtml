                                <li class="">
                                    <a href="@Url.Action("Index","Services")"><i class="fas fa-chevrown-right"></i> Xidmətlər </a>
                                </li>
                                <li class="">
                                    <a href="@Url.Action("Index","Clients")"><i class="fas fa-chevrown-right"></i> Müştərilər </a>
                                </li>
                                <li class="">
                                    <a href="@Url.Action("Index","Contacts")"><i class="fas fa-chevrown-right"></i> Əlaqə məlumatları </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav">
                        <ul class=" navbar-right">
                            <li class="nav-item dropdown open" style="padding-left: 15px;">
                                <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                                   @Session[SessionKey.AdminName]
                                </a>
                                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                                   
                                    <a class="dropdown-item" href="@Url.Action("Logout","Login")"><i class="fa fa-sign-out pull-right"></i> Çıxış </a>
                                </div>
                            </li>

                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main" style="min-height: 1842px;">

                @RenderBody();
                </div>
                <!-- /page content -->
      
            </div>
        </div>

    <!-- jQuery -->
    <script src="~/Areas/Control/PublicAdmin/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Areas/Control/PublicAdmin/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- bootstrap-wysiwyg -->
    <script src="~/Areas/Control/PublicAdmin/vendors/jquery.hotkeys/jquery.hotkeys.js"></script>
    <script src="~/Areas/Control/PublicAdmin/vendors/google-code-prettify/src/prettify.js"></script>

    @RenderSection("script", required: false)
